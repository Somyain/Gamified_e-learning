<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="elearn_course_form" model="ir.ui.view">
        <field name="name">elearn.course.form</field>
        <field name="model">elearn.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                                name="action_open_lessons"
                                class="oe_stat_button"
                                icon="fa-book">
                            <field name="lesson_count" widget="statinfo"/>
                        </button>
                        <button type="object"
                                name="action_open_enrollments"
                                class="oe_stat_button"
                                icon="fa-users">
                            <field name="enrollment_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Lesson">
                            <field name="lesson_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                        <page string="Enrollment">
                            <field name="enrollment_ids">
                                <list editable="bottom">
                                    <field name="user_id"/>
                                    <field name="state"/>
                                    <field name="enroll_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="elearn_course_list" model="ir.ui.view">
        <field name="name">elearn.course.list</field>
        <field name="model">elearn.course</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_elearn_course" model="ir.actions.act_window">
        <field name="name">Course</field>
        <field name="res_model">elearn.course</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>