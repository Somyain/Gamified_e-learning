<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="elearn_enrollment_kanban" model="ir.ui.view">
        <field name="name">elearn.enrollment.kanban</field>
        <field name="model">elearn.enrollment</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click" style="position: relative; padding-right: 120px; min-height: 150px;">
                            <div style="position: absolute; top: 0; right: 0; width: 100px; height: 100px;">
                                <field name="student_image" widget="image"/>
                            </div>
                            <strong>
                                <h2>
                                    <field name="user_id"/>
                                </h2>
                            </strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="elearn_enrollment_form" model="ir.ui.view">
        <field name="name">elearn.enrollment.form</field>
        <field name="model">elearn.enrollment</field>
        <field name="arch" type="xml">
            <form string="Course Enrollment">
                <sheet>
                    <div style="position: absolute; top: 0; right: 0; width: 100px; height: 100px;">
                        <field name="student_image" widget="image"/>
                    </div>
                    <group>
                        <field name="user_id"/>
                        <field name="email"/>
                        <field name="enroll_date"/>
                        <field name="state"/>
                        <field name="enrollment_line_ids">
                            <list editable="bottom">
                                <field name="course_id"/>
                            </list>
                        </field>
                    </group>
                    <notebook>
                        <page string="Lessons">
                            <field name="enrollment_line_ids" readonly="1">
                                <list>
                                    <field name="lesson_ids" widget="many2many_tags"/>
                                    <field name="course_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="elearn_enrollment_list" model="ir.ui.view">
        <field name="name">elearn.enrollment.list</field>
        <field name="model">elearn.enrollment</field>
        <field name="arch" type="xml">
            <list>
                <field name="user_id"/>
                <field name="state"/>
                <field name="enroll_date"/>
            </list>
        </field>
    </record>

    <record id="action_elearn_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">elearn.enrollment</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

</odoo>
